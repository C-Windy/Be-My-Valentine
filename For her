  <script>
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const title = document.getElementById("title");
    const subtitle = document.getElementById("subtitle");
    const footerText = document.getElementById("footerText");
    const modal = document.getElementById("modal");
    const closeBtn = document.getElementById("closeBtn");
    const textMe = document.getElementById("textMe");

    // OPTIONAL: customize these
    const herName = "my favorite person"; // e.g., "Sophia"
    const yourName = "Chris";            // change to your name if you want
    const yourNumber = "";               // e.g., "+18065551234" (leave blank to disable SMS link)

    // Set a slightly personalized subtitle
    subtitle.textContent = `Hey ${herName}, will you be my Valentine? I promise: laughs, snacks, and an unreasonable amount of affection.`;

    // Confetti-ish hearts
    function burstHearts() {
      for (let i = 0; i < 26; i++) {
        const s = document.createElement("div");
        s.textContent = Math.random() > 0.5 ? "üíõ" : "‚ú®";
        s.style.position = "fixed";
        s.style.left = Math.random() * 100 + "vw";
        s.style.top = "-20px";
        s.style.fontSize = (14 + Math.random() * 22) + "px";
        s.style.opacity = "0.95";
        s.style.transform = `rotate(${(Math.random()*50-25)}deg)`;
        s.style.transition = "transform 1.4s linear, top 1.4s linear, opacity 1.4s linear";
        document.body.appendChild(s);

        requestAnimationFrame(() => {
          s.style.top = (70 + Math.random() * 40) + "vh";
          s.style.transform += " scale(1.1)";
          s.style.opacity = "0";
        });

        setTimeout(() => s.remove(), 1500);
      }
    }

    yesBtn.addEventListener("click", () => {
      title.textContent = "She said YES üíõ";
      footerText.textContent = "Status: romantic success ‚úÖ";
      burstHearts();
      modal.classList.add("open");
      modal.setAttribute("aria-hidden", "false");

      // Text link logic
      if (yourNumber.trim()) {
        const msg = encodeURIComponent("YES üíõ (Valentine accepted)");
        textMe.href = `sms:${yourNumber}?&body=${msg}`;
      } else {
        textMe.href = "#";
        textMe.addEventListener("click", (e) => {
          e.preventDefault();
          alert("Add your phone number in the code to enable the SMS link üôÇ");
        }, { once: true });
      }
    });

    closeBtn.addEventListener("click", () => {
      modal.classList.remove("open");
      modal.setAttribute("aria-hidden", "true");
    });

    modal.addEventListener("click", (e) => {
      if (e.target === modal) closeBtn.click();
    });

    // The ‚ÄúNo‚Äù button dodges the cursor/taps (playfully)
    let dodgeCount = 0;
    const dodgePhrases = [
      "No üôÉ",
      "Are you sure? üòÖ",
      "That‚Äôs illegal üö´üíõ",
      "Try again üòá",
      "Nope, wrong button",
      "Nice attempt üòå"
    ];

    function dodge() {
      dodgeCount++;
      noBtn.textContent = dodgePhrases[Math.min(dodgeCount, dodgePhrases.length - 1)];

      const parent = noBtn.parentElement;
      const rect = parent.getBoundingClientRect();

      // Move within the button area
      const x = Math.random() * (rect.width - noBtn.offsetWidth);
      const y = Math.random() * (rect.height - noBtn.offsetHeight);

      noBtn.style.position = "absolute";
      noBtn.style.left = x + "px";
      noBtn.style.top = y + "px";

      if (dodgeCount >= 5) {
        footerText.textContent = "The 'No' button has chosen violence (it‚Äôs shy).";
      }
    }

    // For desktop: move when hovered
    noBtn.addEventListener("mouseenter", dodge);

    // For mobile: move when tapped
    noBtn.addEventListener("touchstart", (e) => {
      e.preventDefault();
      dodge();
    }, { passive: false });
  </script>
